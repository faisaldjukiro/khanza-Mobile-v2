<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".UploadBerkasActivity">

    <!-- Judul Halaman -->
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Upload Berkas Digital"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nama Pasien -->
    <TextView
        android:id="@+id/txtNamaPasien"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nama Pasien: Faisal Djukiro"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#444"
        android:layout_marginTop="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Label Spinner -->
    <TextView
        android:id="@+id/labelSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Jenis Berkas Digital"
        android:textSize="16sp"
        android:textColor="#333"
        app:layout_constraintTop_toBottomOf="@id/txtNamaPasien"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Spinner untuk Pilihan Jenis Berkas -->
    <Spinner
        android:id="@+id/spinnerBerkas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_spinner"
        android:textColor="@color/dark_text"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/labelSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Tombol Pilih File -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPilihFile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pilih File"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3F51B5"
        app:icon="@drawable/ic_file"
        app:iconPadding="8dp"
        app:iconTint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/spinnerBerkas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp" />

    <!-- Nama File yang Terpilih -->
    <TextView
        android:id="@+id/txtNamaFile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Belum ada file dipilih"
        android:textSize="14sp"
        android:textColor="#666"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btnPilihFile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tombol Upload -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUpload"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        app:icon="@drawable/ic_upload"
        app:iconPadding="8dp"
        app:iconTint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/txtNamaFile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
